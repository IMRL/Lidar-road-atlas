#include "flextGL.h"

#ifdef __cplusplus
extern "C" {
#endif
@for category,funcs in functions:
@if funcs and category in ['VERSION_1_0', 'VERSION_1_1']:

/* GL_@category */
@for f in funcs:
#undef gl@f.name
@end
@for f in funcs:
extern @f.returntype APIENTRY gl@f.name\
(@f.param_type_list_string());
@end
@end
@end

FlextGL flextGL{
    @for category,funcs in functions:
    @if funcs and category in ['VERSION_1_0', 'VERSION_1_1']:

    /* GL_@category */
    @for f in funcs:
    gl@f.name,
    @end
    @elif funcs:

    /* GL_@category */
    @for f in funcs:
    nullptr,
    @end
    @end
    @end
};

#ifdef __cplusplus
}
#endif
